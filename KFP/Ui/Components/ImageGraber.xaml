<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="KFP.Ui.Components.ImageGraber"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KFP.Ui.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <Border x:Name="bordurePhoto" PointerEntered="Border_MouseEnter" PointerExited="Border_MouseLeave" PointerReleased="bordurePhoto_PointerReleased"
            BorderThickness="1" BorderBrush="LightGray" CornerRadius="5" Width="300" Height="300">
            <Grid x:Name="ImageGrid">
                <TextBlock HorizontalAlignment="Center" x:Uid="upload_from_files_link" x:Name="picture_textbox"
                                 VerticalAlignment="Top" Margin="0,10,0,0"/>
            </Grid>
        </Border>

        <StackPanel VerticalAlignment="Bottom" Orientation="Vertical" Margin="0,20,0,0">
            <AppBarButton x:Uid="Cancel_Picture_Button" x:Name="cancel_picture" Click="cancel_picture_Click" Visibility="Collapsed" HorizontalAlignment="Center"
                          Icon="Cancel" LabelPosition="Default" />
        </StackPanel>
    </StackPanel>
</UserControl>
