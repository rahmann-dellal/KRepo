<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="KFP.Ui.pages.EditMenuItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KFP.Ui.pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:custom="using:KFP.Ui.Components"
    mc:Ignorable="d">

    <StackPanel x:Name="rootStackPanel" Orientation="Vertical">
        <CommandBar   IsOpen="False" DefaultLabelPosition="Right"  HorizontalAlignment="Center">
            <AppBarButton Icon="Save" x:Uid="UserSaveButton" x:Name="saveButton" Command="{x:Bind SaveCommand}" Background="LightGreen"/>
            <AppBarButton Icon="Refresh" x:Uid="UserResetButton"  x:Name="resetButton" Command="{x:Bind ResetFormCommand}" />
        </CommandBar>
        <TextBlock x:Name="SaveErrorBlock" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center"
       Foreground="OrangeRed" FontSize="12"/>
        <Grid Margin="40,0,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <TextBox Text="{x:Bind ItemName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="230" HorizontalAlignment="Left"  x:Name="itemNameTextBox">
                    <TextBox.Header>
                        <TextBlock x:Uid="Items_name"/>
                    </TextBox.Header>
                </TextBox>
                <TextBlock x:Name="itemNameErrorBlock" Foreground="OrangeRed" FontSize="12"/>


                <RadioButtons x:Name="MenuItemTypeRadioButtons"
                              ItemsSource="{x:Bind getTypeEnumValues()}"
                              SelectedItem="{x:Bind SelectedMenuItemType, Mode=TwoWay}"
                              MaxColumns="3"   Margin="0,20,0,0">
                    <RadioButtons.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Item's type" Margin="0,0,10,0"/>
                            <InfoBadge Background="LightGreen" Foreground="Black"  HorizontalAlignment="Right" VerticalAlignment="Top"
                                       ToolTipService.Placement="Right">
                                <ToolTipService.ToolTip>
                                    <ToolTip x:Uid="MenuItemTypeToolTip"/>
                                </ToolTipService.ToolTip>
                                <InfoBadge.IconSource>
                                    <FontIconSource FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xF142;" />
                                </InfoBadge.IconSource>
                            </InfoBadge>
                        </StackPanel>
                    </RadioButtons.Header>
                </RadioButtons>

                <RelativePanel Margin="0,30,0,0">
                    <TextBox Text="{x:Bind ItemPriceString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           HorizontalAlignment="Left"  x:Name="itemPriceNumberBox">
                        <TextBox.Header>
                            <TextBlock x:Uid="Items_price"/>
                        </TextBox.Header>
                    </TextBox>
                    <TextBlock Text="{x:Bind Currency}" RelativePanel.AlignBottomWithPanel="True" RelativePanel.RightOf="itemPriceNumberBox"  Margin="20,0,0,5"/>
                </RelativePanel>
                <TextBlock x:Name="itemPriceErrorBlock" Foreground="OrangeRed" FontSize="12"/>

                <TextBlock x:Uid="AssignedCategories"  Margin="0,30,0,10"/>
                <RelativePanel>
                    <ComboBox x:Name="allCategoriesCombo" x:Uid="allCategoriesCombo" ItemsSource="{x:Bind AllCategories}" DisplayMemberPath="CategoryName" Margin="10,8,10,0"
                              HorizontalAlignment="Center" SelectedItem="{x:Bind selectedCategoryToAdd, Mode=TwoWay}">
                    </ComboBox>
                    <CommandBar DefaultLabelPosition="Right" RelativePanel.RightOf="allCategoriesCombo">
                        <AppBarButton x:Uid="AddButton2" Icon="Add" Label="Add" LabelPosition="Default"  Background="LightGreen" Command="{x:Bind AddCategoryCommand}"/>
                    </CommandBar>
                </RelativePanel>
                <RelativePanel>
                    <Border x:Uid="categoriesBordrer" x:Name="categoriesBordrer" Margin="0,10,0,0" MinHeight="100" MinWidth="300" BorderThickness="2" BorderBrush="LightGray" CornerRadius="5">
                        <StackPanel>
                            <TextBlock x:Uid="NothingTextBlock" x:Name="NothingTextBlock" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0"/>
                            <ListView x:Name="AssignedCotegoriesListView" ItemsSource="{x:Bind AssignedCategories}" SelectedItem="{x:Bind selectedCategoryToRemove, Mode=TwoWay}" DisplayMemberPath="CategoryName"/>
                        </StackPanel>
                    </Border>
                        <AppBarButton x:Uid="RemoveButton" Icon="Remove"  LabelPosition="Default" RelativePanel.RightOf="categoriesBordrer" Margin="10,10,0,0"
                                      Background="LightCoral" Command="{x:Bind RemoveCategoryCommand}"/>
                </RelativePanel>

            </StackPanel>

            <StackPanel  Grid.Column="1" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock HorizontalAlignment="Center" FontWeight="Bold" x:Uid="picture_text_block"/>
                <custom:ImageGraber LoadedImage="{x:Bind Picture, Mode=TwoWay}"
              Height="auto" x:Name="imageGraber" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </StackPanel>

</Page>
