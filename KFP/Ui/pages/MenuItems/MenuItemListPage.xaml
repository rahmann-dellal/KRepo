<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="KFP.Ui.pages.MenuItemListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:KFP.ViewModels"
    xmlns:models="using:KFP.DATA"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:converters="using:KFP.Converters"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls" xmlns:input="using:CommunityToolkit.Mvvm.Input"
    x:Name="myPage" Loaded="myPage_LoadedAsync">
    
    <Page.Resources>
        <converters:MenuItemTypeConverter x:Key="menuItemTypeConverter"/>
        <converters:ByteArrayToBitmapConverter x:Key="byteArrayToBitmapConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:IndexOfItemConverter x:Key="IndexConverter"
                                SourceList="{x:Bind viewModel.PageCommands}" />
    </Page.Resources>
    <Grid x:Name="PageContent" Margin="80,40,20, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MaxHeight="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                    Grid.Row="0" Visibility="{x:Bind viewModel.isPagesCommandsVisible, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                    Margin="0,0,0,30">
            <TextBlock VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Margin="0,0,50,0" x:Uid="PageTextBlock"/>
            <ListView x:Name="MyListView" SelectedIndex="{x:Bind viewModel.SelectedPage, Mode=TwoWay}"
                      ItemsSource="{x:Bind viewModel.PageCommands}" SelectionChanged="MyListView_SelectionChanged">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="input:RelayCommand">
                                    <TextBlock FontWeight="SemiBold" FontSize="16" Text="{Binding Converter={StaticResource IndexConverter}}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <Grid HorizontalAlignment="Stretch" Grid.Row="1" Visibility="{x:Bind viewModel.ListNotEmpty, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <TextBlock Margin="25,5,0,0" x:Uid="picture_text_block" Grid.Column="0"  FontSize="18"  HorizontalAlignment="Center"/>
            <Button Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{x:Bind viewModel.OrderByNameCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Uid="Items_name"   FontSize="18" />
                    <FontIcon Glyph="&#xE74A;" FontSize="14" FontWeight="Bold" Foreground="Green" Margin="10,0,0,0" Visibility="{x:Bind viewModel.OrderByNameAscend, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
                    <FontIcon Glyph="&#xE74B;" FontSize="14" FontWeight="Bold" Foreground="Green" Margin="10,0,0,0" Visibility="{x:Bind viewModel.OrderByNameDescend, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
                    <FontIcon Glyph="&#xE8CB;" FontSize="14" Margin="10,0,0,0" Visibility="{x:Bind viewModel.DisplaySortOnNameIcon, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                </StackPanel>
            </Button>
            <Button Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{x:Bind viewModel.OrderByPriceCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Uid="Items_price"  FontSize="18"/>
                    <FontIcon Glyph="&#xE74A;" FontSize="14" FontWeight="Bold" Foreground="Green" Margin="10,0,0,0" Visibility="{x:Bind viewModel.OrderByPriceAscend, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
                    <FontIcon Glyph="&#xE74B;" FontSize="14" FontWeight="Bold" Foreground="Green" Margin="10,0,0,0" Visibility="{x:Bind viewModel.OrderByPriceDescend, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
                    <FontIcon Glyph="&#xE8CB;" FontSize="14" Margin="10,0,0,0" Visibility="{x:Bind viewModel.DisplaySortOnPriceIcon, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                </StackPanel>
            </Button>
            <Button Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{x:Bind viewModel.OrderByTypeCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Uid="Item_Type_text_block"  FontSize="18" />
                    <FontIcon Glyph="&#xE74A;" FontSize="14" FontWeight="Bold" Foreground="Green" Margin="10,0,0,0" Visibility="{x:Bind viewModel.OrderByTypeAscend, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
                    <FontIcon Glyph="&#xE74B;" FontSize="14" FontWeight="Bold" Foreground="Green" Margin="10,0,0,0" Visibility="{x:Bind viewModel.OrderByTypeDescend, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
                    <FontIcon Glyph="&#xE8CB;" FontSize="14" Margin="10,0,0,0" Visibility="{x:Bind viewModel.DisplaySortOnTypeIcon, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                </StackPanel>
            </Button>

            <TextBlock Margin="0,5,30,0" x:Uid="ActionsTextBlock"  Grid.Column="4"  HorizontalAlignment="Center" FontSize="20"/>
        </Grid>
        <ListView x:Name="MenuItemslistView"  ItemsSource="{x:Bind viewModel.MenuItemlistElements}" Grid.Row="2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                      ScrollViewer.VerticalScrollMode="Auto" SelectionMode="None" Margin="0,0,0,20" BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" Padding="0,20,0,10">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:MenuItemListElement">
                    <Grid HorizontalAlignment="Stretch" Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <Border CornerRadius="4" Grid.Column="0" BorderThickness="2" BorderBrush="LightGray" Width="80" Height="80">
                            <Image Source="{x:Bind ThumbnailUri}"  Width="80" Height="80" Stretch="Fill"/>
                        </Border>
                        <TextBlock Text="{x:Bind menuItem.ItemName}" TextWrapping="Wrap" TextTrimming="WordEllipsis"
                                   Grid.Column="1" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="{x:Bind menuItem.SalePrice}" Grid.Column="2" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="{x:Bind menuItem.MenuItemType, Converter={StaticResource menuItemTypeConverter}}"
                           Grid.Column="3" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                        <CommandBar Grid.Column="4" IsOpen="False" DefaultLabelPosition="Right"  VerticalAlignment="Center" HorizontalAlignment="Center">
                            <AppBarButton Icon="Find" Command="{x:Bind goToDisplayMenuItemCommand}"/>
                            <AppBarButton Icon="Edit" Command="{x:Bind goToEditMenuItemCommand}" />
                            <AppBarButton Icon="Delete" Command="{x:Bind DeleteMenuItemCommand}" />
                        </CommandBar>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Border Visibility="{x:Bind viewModel.isListEmpty, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                Grid.Row="2" Height="500" Margin="0,10,40,0" MinHeight="100" MinWidth="300"
                BorderThickness="0" BorderBrush="LightGray" CornerRadius="5" VerticalAlignment="Top">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Uid="NothingToDisplayTxtBlk" Foreground="DarkGray" Margin="0,0,0,30" FontSize="18"/>
                <Button Background="{ThemeResource AccentFillColorDefaultBrush}" FontSize="18"
                        Foreground="{ThemeResource TextOnAccentFillColorPrimary}" HorizontalAlignment="Center" Command="{x:Bind viewModel.GoToAddMenuItemCommand}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xECC8;" />
                        <TextBlock x:Uid="AddMenuItemTextBlock" Margin="8,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        <Button Background="{ThemeResource AccentFillColorDefaultBrush}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="4"
        Foreground="{ThemeResource TextOnAccentFillColorPrimary}" Command="{x:Bind viewModel.GoToAddMenuItemCommand}"
                Visibility="{x:Bind viewModel.ListNotEmpty, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
            <StackPanel Orientation="Horizontal">
                <FontIcon Glyph="&#xECC8;" />
                <TextBlock x:Uid="AddMenuItemTextBlock" Margin="8,0,0,0"/>
            </StackPanel>
        </Button>

    </Grid>
</Page>
