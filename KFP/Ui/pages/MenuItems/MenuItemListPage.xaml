<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="KFP.Ui.pages.MenuItemListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KFP.Ui.pages"
    xmlns:models="using:KFP.DATA"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:converters="using:KFP.Converters"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    Loaded="myPage_Loaded"
    x:Name="myPage">

    <Page.Resources>
        <converters:MenuItemTypeConverter x:Key="menuItemTypeConverter"/>
        <converters:ByteArrayToBitmapConverter x:Key="byteArrayToBitmapConverter"/>
    </Page.Resources>
    <StackPanel>
        <muxc:ProgressRing x:Name="progrssRing" IsActive="True" Visibility="Visible"/>
        <Grid x:Name="PageContent" Margin="80,40,20, 0" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <Grid HorizontalAlignment="Stretch" Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>

                <TextBlock Margin="25,0,0,0" x:Uid="picture_text_block" Grid.Column="0"  FontSize="18"  HorizontalAlignment="Center"/>
                <TextBlock x:Uid="Items_name" Grid.Column="1"  FontSize="18" HorizontalAlignment="Center"/>
                <TextBlock x:Uid="Items_price" Grid.Column="2"  FontSize="18" HorizontalAlignment="Center"/>
                <TextBlock x:Uid="Item_Type_text_block" Grid.Column="3"  FontSize="18" HorizontalAlignment="Center"/>

                <TextBlock Margin="0,0,30,0" x:Uid="ActionsTextBlock"  Grid.Column="4"  HorizontalAlignment="Center" FontSize="20"/>
            </Grid>
            <ListView x:Name="MenuItemslistView"  Grid.Row="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                      ScrollViewer.VerticalScrollMode="Auto" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:MenuItemListElement">
                        <Grid HorizontalAlignment="Stretch" Margin="0,0,0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="80"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Border CornerRadius="4" Grid.Column="0" BorderThickness="2" BorderBrush="LightGray" Width="80" Height="80">
                                <Image Source="{x:Bind bitmapImage}"  Width="80" Height="80" Stretch="Fill"/>
                            </Border>
                            <TextBlock Text="{x:Bind menuItem.ItemName}" Grid.Column="1" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="{x:Bind menuItem.SalePrice}" Grid.Column="2" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="{x:Bind menuItem.MenuItemType, Converter={StaticResource menuItemTypeConverter}}"
                           Grid.Column="3" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                            <CommandBar Grid.Column="4" IsOpen="False" DefaultLabelPosition="Right"  VerticalAlignment="Center" HorizontalAlignment="Center">
                                <AppBarButton Icon="Find" Command="{x:Bind goToDisplayMenuItemCommand}"/>
                                <AppBarButton Icon="Edit" Command="{x:Bind goToEditMenuItemCommand}" />
                                <AppBarButton Icon="Delete" Command="{x:Bind DeleteMenuItemCommand}" />
                            </CommandBar>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </StackPanel>

</Page>
