<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="KFP.Ui.pages.DisplayOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KFP.Ui.pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:KFP.Ui.pages"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Grid Margin="0,20,30,0">
                <TextBlock FontSize="24" FontWeight="SemiBold" Margin="60,0,0,0" HorizontalAlignment="Left">
                    <Run x:Uid="OrderTextBlock" />
                    <Run Text="#"/>
                    <Run Text="{x:Bind ViewModel.order.Id, Mode=OneWay}"/>
                </TextBlock>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" Background="{StaticResource SecondBackgroud}" CornerRadius="10">
                    <TextBlock x:Uid="GotoTextBlock" FontWeight="SemiBold" VerticalAlignment="Center" Margin="50,0,80,0"/>
                    <HyperlinkButton Command="{x:Bind ViewModel.NavigatetoTablesCommand}" Margin="0,0,50,0"   BorderThickness="0" CornerRadius="0" BorderBrush="{ThemeResource SystemAccentColor}" Width="200" 
                             Visibility="{x:Bind ViewModel.HasTables, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="TablesTextBlock" FontSize="16" Margin="0,0,20,0" VerticalAlignment="Center" />
                            <PathIcon Data="{StaticResource TablesIconData}"/>
                        </StackPanel>
                    </HyperlinkButton>
                    <HyperlinkButton Command="{x:Bind ViewModel.NavigateToOrdersCommand}" Margin="0,0,20,0"   BorderThickness="0" CornerRadius="0"  BorderBrush="{ThemeResource SystemAccentColor}" Width="200" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="OrdersTextBlock" FontSize="16" Margin="0,0,20,0" VerticalAlignment="Center" />
                            <PathIcon Data="{StaticResource OrdersIconData}"/>
                        </StackPanel>
                    </HyperlinkButton>
                </StackPanel>
            </Grid>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="700" Width="*"/>
                <ColumnDefinition Width="260"  />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"  HorizontalAlignment="Center" Margin="0,30,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="5*"/>

                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center">
                    <TextBlock x:Uid="OrderLocationTextBlock"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,40,0" FontSize="15" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Top" >
                        <Border Margin="0,0,10,0"  BorderBrush="{x:Bind ViewModel.IsSetOnCounter, Converter={StaticResource BoolToBrushConverter}, Mode=OneWay}" 
                            BorderThickness="1"
                            Visibility="{x:Bind ViewModel.IsSetOnCounter, Converter={StaticResource BoolToVisibilityConverter} ,Mode=OneWay}"
                            CornerRadius="5">
                            <Button Height="50" IsEnabled="False" Foreground="Black" FontWeight="Bold">
                                <StackPanel Orientation="Horizontal">
                                    <PathIcon Data="{StaticResource CounterIconData}" Margin="0,0,20,0"
                                                Foreground="LightGreen"/>
                                    <TextBlock  x:Uid="DisplayOrderPage_CounterButtonTxtBlk"  Margin="0,0,20,0" VerticalAlignment="Center" Foreground="Black"/>
                                </StackPanel>
                            </Button>
                        </Border>
                        <Border Margin="0,0,10,0"  BorderBrush="LightGreen" 
                                BorderThickness="1"
                                Visibility="{x:Bind ViewModel.order.TableNumber, Converter={StaticResource BoolToVisibilityConverter}}"
                                CornerRadius="5">
                            <Button Height="50" IsEnabled="False" Foreground="Black" FontWeight="Bold">
                                <StackPanel Orientation="Horizontal">
                                    <PathIcon Data="{StaticResource TableIconData}" Margin="0,0,20,0" 
                                                Foreground="LightGreen"/>
                                    <TextBlock x:Uid="DisplayOrderPage_TableButtonTxtBlk" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="Black"/>
                                    <TextBlock Text="{x:Bind ViewModel.SelectedTableNumber, Mode=OneWay}" FontWeight="Bold" VerticalAlignment="Center" Foreground="Black"/>
                                </StackPanel>
                            </Button>
                        </Border>
                        <Border BorderBrush="LightGreen" 
                                 BorderThickness="1"
                                  Visibility="{x:Bind ViewModel.IsSetForDelivery, Converter={StaticResource BoolToVisibilityConverter} ,Mode=OneWay}"
                                     CornerRadius="5">
                            <Button Height="50" IsEnabled="False" Foreground="Black" FontWeight="Bold">
                                <StackPanel Orientation="Horizontal">
                                    <PathIcon Data="{StaticResource DeliveryIconData}" Margin="0,0,20,0"
                                                Foreground="LightGreen"/>
                                    <TextBlock x:Uid="DisplayOrderPage_DeliveryButtonTxtBlk" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="Black"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0" 
                            Visibility="{x:Bind ViewModel.CanEditOrder, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                    <Button Command="{x:Bind ViewModel.EditOrderCommand}"  Width="220"  Margin="0,0,20,0" >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Uid="DisplayOrderPage_EditOrderTxtBlk" Margin="0,0,13,0" HorizontalAlignment="Center" />
                            <FontIcon Glyph="&#xE70F;"  FontWeight="ExtraBold" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button Command="{x:Bind ViewModel.CancelOrderCommand}"  Width="220"  Margin="0,0,0,0" BorderBrush="OrangeRed">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Uid="DisplayOrderPage_CancelOrderTxtBlk" Margin="0,0,13,0" HorizontalAlignment="Center" />
                            <FontIcon Glyph="&#xE711;"  FontWeight="ExtraBold" Foreground="OrangeRed" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <pages:DisplayOrderView Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20" 
                                        order="{x:Bind ViewModel.order, Mode=OneWay}"  />
                <StackPanel Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,10">
                        <TextBlock x:Uid="TotalPriceTxtBlock" FontSize="18"  Margin="0,0,20,0" VerticalAlignment="Bottom"/>
                        <TextBlock Text="{x:Bind ViewModel.order.TotalPrice,Mode=OneWay, Converter={StaticResource DoubleToStringConverter}}" FontSize="22" FontWeight="SemiBold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Bind ViewModel.Currency, Mode=OneWay}" FontSize="18"  VerticalAlignment="Bottom"/>
                    </StackPanel>

                </StackPanel>
                <StackPanel Grid.Row="6" HorizontalAlignment="Center" Margin="0,0,0,0" >

                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,0"
                                 Visibility="{x:Bind ViewModel.PaymentPending, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                        <TextBlock x:Uid="DisplayOrderPage_ConfirmPaymentTxtBlk" FontWeight="Bold" HorizontalAlignment="Center" />
                        <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button Command="{x:Bind ViewModel.ConfirmCashPaymentCommand}"  Width="200" Height="50" Margin="0,0,20,0" Background="LightPink" BorderThickness="2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Uid="DisplayOrderPage_CashPaymentTxtBlk" Margin="0,0,20,0" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Left"/>
                                    <PathIcon Data="{StaticResource CardIconData}"   HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{x:Bind ViewModel.ConfirmCardPaymentCommand}"  Width="200" Height="50" Margin="0,0,20,0" Background="CadetBlue" BorderThickness="2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Uid="DisplayOrderPage_CardPaymentTxtBlk" Margin="0,0,20,0" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Left"/>
                                    <FontIcon Glyph="&#xE8C7;" FontSize="22"  FontWeight="ExtraBold"  HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{x:Bind ViewModel.DeferPaymentCommand}"  Width="200" Height="50" Margin="0,0,0,0" BorderThickness="2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Uid="DisplayOrderPage_DeferPaymentTxtBlk" Margin="0,0,20,0" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Left"/>
                                    <FontIcon Glyph="&#xECC5;" FontSize="22"  FontWeight="ExtraBold"  HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0" 
                        Visibility="{x:Bind ViewModel.PaymentSet, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                        <TextBlock x:Uid="DisplayOrderPage_PaymentTxtBlk" HorizontalAlignment="Center" Margin="0,0,20,0" VerticalAlignment="Center"/>
                        <TextBlock x:Uid="DisplayOrderPage_ByCardTxtBlk" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"
                                   Visibility="{x:Bind ViewModel.isPaidCard, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
                        <TextBlock x:Uid="DisplayOrderPage_CashTxtBlk" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"
                                   Visibility="{x:Bind ViewModel.isPaidCash, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
                        <TextBlock x:Uid="DisplayOrderPage_DeferredTxtBlk" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,40,0"
                                   Visibility="{x:Bind ViewModel.PaymentDeferred, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
                        <Button Command="{x:Bind ViewModel.ChangePaymentMethodeCommand}"  Margin="0,0,0,0"
                                Visibility="{x:Bind ViewModel.PaymentDeferred, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Uid="DisplayOrderPage_ChangePaymentTxtBlk" Margin="0,0,20,0" FontWeight="SemiBold" HorizontalAlignment="Left"/>
                                <FontIcon Glyph="&#xE8AB;" FontSize="14"  FontWeight="ExtraBold"  HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Visibility="{x:Bind ViewModel.isOrderFinalized, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock x:Uid="DisplayOrderPage_StatusTxtBlk" HorizontalAlignment="Center" Margin="0,0,20,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Bind ViewModel.Status}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" 
                        Visibility="{x:Bind ViewModel.PaymentSet, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                        <Button Width="250" Height="90"  Margin="0,0,30,0" Background="Honeydew" BorderThickness="2" 
                                Visibility="{x:Bind ViewModel.canSetOrderCompleted, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                                Command="{x:Bind ViewModel.SetOrderCompletedCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Uid="DisplayOrderPage_CompleteOrderTxtBlk" FontSize="16" Margin="0,0,30,0" FontWeight="SemiBold" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                                <FontIcon Glyph="&#xE930;" FontSize="22"  FontWeight="ExtraBold"  HorizontalAlignment="Right" Foreground="Green"/>
                            </StackPanel>
                        </Button>
                        <Button Width="250" Height="90"  Margin="0,0,0,0" Background="#FF77BBFF" BorderThickness="2" 
                                Command="{x:Bind ViewModel.NewOrderCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Uid="DisplayOrderPage_NewOrderTxtBlk" FontSize="16" Margin="0,0,30,0" FontWeight="SemiBold" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                                <FontIcon Glyph="&#xE710;" FontSize="22"  FontWeight="ExtraBold"  HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Column="1" HorizontalAlignment="Right" Margin="0,20,10,0" MaxWidth="300">
                <StackPanel Margin="0,0,20,0">
                <StackPanel Margin="0,30,0,0" Visibility="{x:Bind ViewModel.order.Notes, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock HorizontalAlignment="Center" FontWeight="Bold" x:Uid="DisplayOrderPage_NotesTxtBlk"/>
                        <Border Background="{StaticResource SecondBackgroud}" CornerRadius="10" Padding="10"
                    Margin="0,15,0,0" HorizontalAlignment="Center" MinWidth="200" MinHeight="100">
                        <TextBlock MinHeight="100" MaxHeight="400"  Text="{x:Bind ViewModel.order.Notes}" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="0,20,0,0" Visibility="{x:Bind ViewModel.order.DeliveryInfo, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock HorizontalAlignment="Center" FontWeight="Bold" x:Uid="DisplayOrderPage_DeliveryInfoTxtBlk"/>
                    <StackPanel Margin="0,20,0,0" Visibility="{x:Bind ViewModel.order.DeliveryInfo.CustomerName, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock HorizontalAlignment="Left" FontWeight="SemiBold"  x:Uid="DisplayOrderPage_customerNameTxtBlk"/>
                            <Border Background="{StaticResource SecondBackgroud}" CornerRadius="10" Padding="10,10,10,0"
                    Margin="0,10,0,0" HorizontalAlignment="Center" MinWidth="200" MinHeight="50">
                            <TextBlock  MaxHeight="50" Text="{x:Bind ViewModel.order.DeliveryInfo.CustomerName}" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Margin="0,20,0,0" Visibility="{x:Bind ViewModel.order.DeliveryInfo.PhoneNumber, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock HorizontalAlignment="Left" FontWeight="SemiBold" x:Uid="DisplayOrderPage_customerPhoneTxtBlk"/>
                            <Border Background="{StaticResource SecondBackgroud}" CornerRadius="10" Padding="10,10,10,0"
                    Margin="0,10,0,0" HorizontalAlignment="Center" MinWidth="200" MinHeight="50">
                            <TextBlock MaxHeight="50" Text="{x:Bind ViewModel.order.DeliveryInfo.PhoneNumber}" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Margin="0,20,0,0" Visibility="{x:Bind ViewModel.order.DeliveryInfo.Address, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock HorizontalAlignment="Left" FontWeight="SemiBold" x:Uid="DisplayOrderPage_AddressTxtBlk"/>
                            <Border Background="{StaticResource SecondBackgroud}" CornerRadius="10" Padding="10"
                    Margin="0,10,0,0" HorizontalAlignment="Center" MinWidth="200" MinHeight="100">
                            <TextBlock MinHeight="100" MaxHeight="300" Text="{x:Bind ViewModel.order.DeliveryInfo.Address}" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
